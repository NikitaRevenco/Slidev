{
  "private": true,
  "scripts": {
    "dev:mocha": "slidev --open test/mocha.md",
    "dev:latte": "slidev --open test/latte.md",
    "dev:frappe": "slidev --open test/frappe.md",
    "dev:macchiato": "slidev --open test/macchiato.md",
    "build": "deno run --allow-read --allow-write --allow-run  build.ts",
    "generate-preview:mocha": "slidev export test/mocha.md --format png --output preview/mocha.png",
    "generate-preview:frappe": "slidev export test/frappe.md --format png --output preview/frappe.png",
    "generate-preview:latte": "slidev export test/latte.md --format png --output preview/latte.png",
    "generate-preview:macchiato": "slidev export test/macchiato.md --format png --output preview/macchiato.png",
    "generate-preview": "pnpm generate-preview:mocha && pnpm generate-preview:latte && pnpm generate-preview:frappe && pnpm generate-preview:macchiato"
  },
  "devDependencies": {
    "@catppuccin/palette": "^1.7.1",
    "@slidev/cli": "0.50.0-beta.7",
    "deno": "^0.1.1",
    "playwright": "1.47.0",
    "playwright-chromium": "^1.47.0",
    "playwright-core": "1.47.0"
  }
}
